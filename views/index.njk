{%extends "layout.njk"%}
{%block content%}
<style>
    * {
        box-sizing: border-box;
    }

    body, html {
        margin: 0;
        padding: 0;
    }

    header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 2rem;
        position: relative;
    }

    .hamburger {
        position: absolute;
        left: 2rem;
    }

    h1 {
        flex: 1;
        text-align: center;
        font-size: 2.5rem;
        margin: 0;
    }

    .main-content {
        display: flex;
        justify-content: space-around;
        align-items: center;
        padding: 2rem;
        flex-wrap: wrap;
    }

    .main-content img {
        max-width: 100%;
        width: 40%;
        height: auto;
    }

    .container2 {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        min-width: 250px;
        width: 300px;
    }

    .container2 button {
        padding: 1.5rem;
        font-size: 1.1rem;
        background-color: #f5f5f5;
        border: 1px solid #ccc;
        border-radius: 5px;
        cursor: pointer;
        transition: background 0.3s;
    }

    .container2 button:hover {
        background-color: #ddd;
    }

    .container2 button a {
        text-decoration: none;
        color: #5c9ead;
    }

    @media screen and (max-width: 768px) {
        header {
            flex-direction: column;
            align-items: center;
        }

        h1 {
            font-size: 2rem;
        }

        .main-content {
            flex-direction: column;
            gap: 2rem;
        }

        .hamburger {
            position: static;
            margin-bottom: 1rem;
        }
    }
</style>

<main class="index">
    <header>
        <div class="hamburger">
            {% include "hamhurger.njk" %}
        </div>
        <h1>Welcome to QVITTER {{user.name}} !!!!</h1>
    </header>

    <div class="main-content">
        <img src="../img/Qvitter.png" alt="qvitter bird">
        <div class="container2">
            <button><a href="/tweets">GÃ¥ till tweets!</a></button>
            <button><a href="/tweets/new">Skapa qvitt</a></button>
            <button><a href="/tweets/login">Login</a></button>
        </div>
    </div>
</main>
{%endblock%}
