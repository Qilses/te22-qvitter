{% extends "layout.njk" %}
{% block content %}
<style>
    body,
    html {
        background-color: rgb(30, 0, 255);
        color: rgb(255, 255, 255);
    }

  
</style>
<main>
    <h1>{{ title }}</h1>
    <h2>{{ message }}</h2>
    <p>views: {{ views }}</p>
    <form action="/login" method="POST">
        <input type="text" name="username" placeholder="Användarnamn" required>
        <input type="password" name="password" placeholder="Lösenord" required>
        <input type="email" name="email" placeholder="Email adress" nonrequired>
        <button type="submit">Login</button>
    </form>
    
        <h3>Har inget konto? Skapa ett!</h3>
        <h3><a href="/newuser">Ny andvändare</a></h3>

</main>
{% endblock %}