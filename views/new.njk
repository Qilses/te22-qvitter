{%extends "layout.njk"%}
{%block content%}
<main class="container region flow">
    <style>
        .IMG{
            margin-left: 100rem;
            width: 10rem;
            height: 5rem;
        }
    </style>

    <h1>{{ title }}</h1>
    <h2> {{ message }}</h2>
    <img class="IMG" src="../img/Qvitter.png" alt="qvitter bird">
    <button><a href="/tweets">Gå till tweets!</a></button>
    <button><a href="/">Gå hem!</a></button>

    <form action="/tweets/new" method="post">
        <label for="message">Message</label>
        <textarea class="newtextarea" id="message" name="message" required></textarea>
        <button type="submit" id="author_id">Post new</button>
    </form>

</main>
{%endblock%}